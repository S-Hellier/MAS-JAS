    "expo-barcode-scanner": "^13.0.1",
    "expo-camera": "^17.0.8",
    "expo-image-picker": "^17.0.8",
    "expo-status-bar": "~3.0.8",
    "react": "19.1.0",
    "react-native": "0.81.4",
    "react-native-safe-area-context": "^5.6.1",
    "react-native-screens": "^4.16.0",
    "react-native-vision-camera": "^4.7.2",
    "vision-camera-code-scanner": "^0.2.0"
